</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li><a href="/dashboard"><span class="glyphicon glyphicon-th-list"></span>    Overview</a></li>
                <li><a href="/addCategory"><span class="glyphicon glyphicon-plus"></span>    Categories</a></li>
                <li><a href="/addSubCategory"><span class="glyphicon glyphicon-plus"></span>    Sub-Categories</a></li>
                <li class="active"><a href="/addQuestion"><span class="glyphicon glyphicon-plus"></span>    Questions</a></li>
            </ul>
            <ul class="nav nav-sidebar">
                <li><a href="/settings"><span class="glyphicon glyphicon-cog"></span>    Settings</a></li>
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h2 class="page-header">Quiz Question Panel</h2>
            <h4 class="sub-header">Add Question</h4>

            <form class="form-horizontal" id="question-form">
                <div class="form-group">
                    <label for="CategorySelect" class="col-sm-2 control-label">Select Parent Category:</label>
                    <div class="col-sm-4">
                        <!-- every question has a category (required) but may not have a sub-category (not required)-->
                        <select name="parentCategory" id="category-selector" required>

                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="subCategorySelect" class="col-sm-2 control-label">Select Sub-Category:</label>
                    <div class="col-sm-4">
                        <select name="parentSubCategory" id="subCategory-selector">

                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Tag" class="col-sm-2 control-label">Add Question:</label>
                    <div class="col-mg-4">
                        <input type="textarea" id="question-input" class="form-control" value="" name="questionText" placeholder="enter question here" required>
                    </div>
                    <br>
                    <label for="Tag" class="col-sm-2 control-label"><span style="color: green">Solution </span>Options:</label>
                    <div class="col-sm-4">
                        <input type="text" id="optionA" class="form-control" value="" name="optionA" placeholder="enter option A || TRUE" required>
                        <input type="text" id="optionB" class="form-control" value="" name="optionB" placeholder="enter option B || FALSE" required>
                        <input type="text" id="optionC" class="form-control" value="" name="optionC" placeholder="enter option C" >
                        <input type="text" id="optionD" class="form-control" value="" name="optionD" placeholder="enter option D" >
                        <input type="text" id="answer" class="form-control" value="" name="answer" placeholder="correct answer (ie. optionA)" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="ImageUpload" class="col-sm-2 control-label">Question Image:</label>
                    <div class="col-sm-4">
                        <input id="question-img-input" type="file" name="questionImg">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-8">
                        <form name="timerMin">
                            <span style="color: red"><b>Countdown</b> </span><span style="color: white">Timer (optional) : </span>
                            <input type="number" id="timer" name="questionTime" placeholder="00:00 (min:sec)">
                        </form>
                    </div>
                    <div class="col-sm-offset-1 col-sm-8">
                        <button type="submit" class="btn btn-default btn-primary">Add Question</button>
                    </div>
                </div>
            </form>
            <br>

            <h4 class="sub-header">View Questions</h4>
            <h6 class="alert alert-success" style="color:green">Please Note: Id numbers are automatically generated.</h6>
            <div class="col-sm-9 col-md-8  main">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>questionId</th>
                                <th>Question</th>
                                <th>Sub-Category</th>
                                <th>Category</th>
                                <th>Edit Question</th>
                                <th id="deleteHead">Delete Question</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody" style="display: none" class="success">

                            <tr>
                                <td><%= questionId %></td>
                                <td><%= questionName %></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" src="javascript/ejs_production.js"></script>
<script src="//www.parsecdn.com/js/parse-1.5.0.min.js"></script>
